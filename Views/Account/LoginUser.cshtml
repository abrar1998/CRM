  </head>
  <body  class=" d-flex flex-column">
    
    <div class="page page-center">
      <div class="container container-tight py-4">
        <div class="text-center mb-4">
          <a asp-action="Index" asp-controller="Home" class="navbar-brand navbar-brand-autodark">
            <img src="~/template/static/logo.svg" width="110" height="32" alt="Tabler" class="navbar-brand-image">
          </a>
        </div>
        <div class="card card-md">
          <div class="card-body">
            <h2 class="h2 text-center mb-4">Login to your account</h2>
             <form asp-action="LoginUser">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="mb-3">
                <label class="form-label">Email address</label>
                <input type="email" class="form-control" placeholder="your@email.com" autocomplete="off" asp-for="Email">
                 <span asp-validation-for="Email" class="text-danger"></span>
              </div>
              <div class="mb-2">
                <label class="form-label">
                  Password
                  <span class="form-label-description">
                    <a href="./forgot-password.html">Forgot Password</a>
                  </span>
                </label>
                <div class="input-group input-group-flat">
                  <input type="password" class="form-control"  placeholder="Your password"  autocomplete="off" asp-for="Password">
                  <span asp-validation-for="Email" class="text-danger"></span>
                  <span class="input-group-text">
                    <a href="#" class="link-secondary" title="Show password" data-bs-toggle="tooltip"><!-- Download SVG icon from http://tabler-icons.io/i/eye -->
                      <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" /><path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6" /></svg>
                    </a>
                  </span>
                </div>
              </div>
              <div class="mb-2">
                <label class="form-check">
                  <input type="checkbox" class="form-check-input" asp-for="RememberMe"/>
                  <span class="form-check-label">Remember me on this device</span>
                </label>
              </div>
              <div class="form-footer">
                <input type="submit" value="Login" class="btn btn-primary w-100"/>
              </div>
            </form>
          </div>
   @*        <div class="hr-text">or</div>
          <div class="card-body">
            <div class="row">
              <div class="col"><a href="#" class="btn btn-google w-100">
                  <!-- Download SVG icon from http://tabler-icons.io/i/brand-github -->

                    <!-- Download SVG icon from http://tabler-icons.io/i/brand-google -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M17.788 5.108a9 9 0 1 0 3.212 6.892h-8" /></svg>
                  Sig in with Google
                  </a>
                </div>
              <div class="col">
                  <!-- Download SVG icon from http://tabler-icons.io/i/brand-twitter -->
                  <a href="#" class="btn btn-facebook w-100">
                    <!-- Download SVG icon from http://tabler-icons.io/i/brand-facebook -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M7 10v4h3v7h4v-7h3l1 -4h-4v-2a1 1 0 0 1 1 -1h3v-4h-3a5 5 0 0 0 -5 5v2h-3" /></svg>
                    Sign in with Facebook
                  </a>
                </div>
            </div>
          </div> *@
        </div>
        <div class="text-center text-secondary mt-3">
          Don't have account yet? <a href="#" tabindex="-1">Sign up</a>
        </div>
      </div>
    </div>
