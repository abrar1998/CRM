                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title mb-3">Team Deployed</h3>
                            <ul class="list-group">
                                @if (Model.TeamMembers.Any())
                                {
                                    @foreach (var teamMember in Model.TeamMembers)
                                    {
                                        <li class="list-group-item">
                                            <strong>@teamMember.Name</strong>
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li class="list-group-item">
                                        <strong class="alert-message">No Team Assigned Yet</strong>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

