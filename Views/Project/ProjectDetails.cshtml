        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title mb-3">Project Client</h3>
                    <p class="card-text">
                        @if (Model.ProjectClient != null && !string.IsNullOrEmpty(Model.ProjectClient))
                        {
                            <strong>@Model.ProjectClient</strong>
                        }
                        else
                        {
                            <strong class="alert-message">Project Client Not Assigned Yet</strong>
