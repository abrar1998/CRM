@using CRM.Models.Registration
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@model CRM.Models.Domain.Project
@{
    ViewData["Title"] = "ProjectCompletionPercentage";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<div class="container mt-5 mb-5">
    <div class="row">
        <!-- Project Header -->
        <!-- (Existing project header code here) -->
    </div>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <!-- Project Progress Section -->
            <div class="col-lg-8 mb-4">
                <div class="card shadow border-0">
                    <div class="card-body text-center">
                        <h3 class="card-title mb-3" style="color: #2c3e50;">Project: <b>@Model.ProjectName</b></h3>
                        @if (ViewBag.Client != null)
                        {
                            <h3 class="card-title mb-3" style="color: #2c3e50;">Client: <b>@ViewBag.Client</b></h3>
                        }
                        <div id="project-progress-chart" style="height: 250px;"></div>
                        <div class="progress mt-4" style="height: 30px; border-radius: 15px; overflow: hidden;">
                            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: @Model.ProgressPercentage%; background: linear-gradient(to right, #1e90ff, #00c9ff);" aria-valuenow="@Model.ProgressPercentage" aria-valuemin="0" aria-valuemax="100">
                                <span class="progress-bar-text">@Model.ProgressPercentage%</span>
                            </div>
                          
                        </div>
                        <h4 class="mt-3" style="color: #2c3e50;">Progress: @Model.ProgressPercentage%</h4>

                        <!-- Dropdown for selecting progress percentage -->
                        @if (User.IsInRole(RolesClass.Admin))
                        {
                            <form id="progressForm">
                                <div class="form-group mt-4">
                                    <label for="progressPercentageDropdown" class="font-weight-bold" style="color: #2c3e50;">Update Progress Percentage:</label>
                                    <select id="progressPercentageDropdown" class="form-control" style="display: inline-block; width: auto;" required>
                                        <option value="">Select a percentage</option> <!-- Add a default empty option -->
                                        @for (int i = 0; i <= 100; i += 5)
                                        {
                                            <option value="@i">@i%</option>
                                        }
                                    </select>
                                    <div class="invalid-feedback">
                                        Please select a progress percentage.
                                    </div>
                                    <button id="updateProgressBtn" type="button" class="btn btn-primary ml-2" style="display: inline-block;">Update</button>
                                </div>
                            </form>

                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var options = {
            chart: {
                type: 'radialBar',
                height: 250,
            },
            plotOptions: {
                radialBar: {
                    hollow: {
                        size: '60%',
                    },
                    dataLabels: {
                        name: {
                            show: true,
                            fontSize: '22px',
                            color: '#333',
                            offsetY: -10
                        },
                        value: {
                            show: true,
                            fontSize: '16px',
                            color: '#333',
                            formatter: function (val) {
                                return val + "%";
                            }
                        }
                    }
                }
            },
            series: [@Model.ProgressPercentage],
            labels: ['Completed'],
            colors: ['#1E90FF'],
            fill: {
                type: 'gradient',
                gradient: {
                    shade: 'dark',
                    type: 'horizontal',
                    shadeIntensity: 0.5,
                    gradientToColors: ['#00c9ff'],
                    inverseColors: false,
                    opacityFrom: 1,
                    opacityTo: 1,
                    stops: [0, 100]
                }
            }
        };

        var chart = new ApexCharts(document.querySelector("#project-progress-chart"), options);
        chart.render();
    });
</script>

<script>
    $(document).ready(() => {

        $('#updateProgressBtn').click(function () {
            var progressForm = $('#progressForm')[0];
            var progressPercentageDropdown = $('#progressPercentageDropdown');
            var PerVal = progressPercentageDropdown.val();

            // Check if a value is selected
            if (PerVal === "") {
                // Add Bootstrap validation class
                progressPercentageDropdown.addClass('is-invalid');
                return; // Stop execution if validation fails
            } else {
                // Remove validation class if a value is selected
                progressPercentageDropdown.removeClass('is-invalid');
            }

            var projectId = '@Model.ProjectId';
                $.ajax({
                    url: '@Url.Action("IncreaseProjectProgress", "Project")', // Ensure this is correct
                    type: 'POST',
                    data: {
                        perVal: PerVal,
                    projectId: projectId,
                    },
                    success: function (response) {
                        swal("Thank You!", "Project Progress Increased Successfully!", "success", {
                            button: "Ok!",
                        });

                        setTimeout(() => {
                            location.reload(); // Reload the page to reflect changes
                        }, 2000);
                    },
                    error: function (xhr, status, error) {
                        swal({
                            title: "Error!",
                            text: "An unexpected error occurred",
                            icon: "warning",
                            button: "Cancel!",
                        });
                    }
                });
          
        });
    });
</script>

<style>
    .progress-bar {
        font-size: 1rem;
        line-height: 30px;
        font-weight: bold;
        text-align: center;
        color: white;
    }

    .progress-bar-text {
        position: absolute;
        width: 100%;
        font-size: 1.1rem;
        color: white;
        font-weight: bold;
    }

    .card {
        border-radius: 10px;
    }

    .card-body {
        padding: 2rem;
    }

    .card-title {
        font-size: 1.75rem;
    }
</style>
