@model CRM.Models.Domain.Employee

@{
    ViewData["Title"] = "Employee Details";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Employee Details</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center">
                    <img src="@Url.Content("~/Images/" + Model.PhotoPath)" class="img-fluid rounded mb-3" alt="@Model.Name" style="max-height: 300px;">
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Phone Number</dt>
                        <dd class="col-sm-8">@Model.PhoneNumber</dd>

                        <dt class="col-sm-4">Designation</dt>
                        <dd class="col-sm-8">@Model.EmployeeDesignation</dd>

                        <dt class="col-sm-4">Project ID</dt>
                        <dd class="col-sm-8">@Model.Emp_ProjectId</dd>

                        <dt class="col-sm-4">User ID</dt>
                        <dd class="col-sm-8">@Model.Emp_UserId</dd>

                        <dt class="col-sm-4">Employee ID</dt>
                        <dd class="col-sm-8">@Model.EmployeeId</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <a href="@Url.Action("Edit", new { id = Model.EmployeeId })" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Edit
            </a>
            <form action="@Url.Action("Delete", new { id = Model.EmployeeId })" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this employee?');">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
            </form>
        </div>
        <div>
            <a asp-action="AssignProject" asp-route-id="@Model.EmployeeId" class="btn btn-secondary">Assign Project</a>
        </div>
    </div>
</div>
